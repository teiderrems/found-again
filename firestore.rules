rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ✅ Fonction helper : vérifie si le document utilisateur existe ET que le rôle est 'admin'
    function isAdmin() {
      return request.auth != null 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ✅ Vérifie si l'utilisateur est authentifié
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // ✅ Vérifie si l'utilisateur est le propriétaire
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Collection des utilisateurs
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId); // seul l'utilisateur peut créer son propre doc
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Collection des déclarations
    match /declarations/{declarationId} {
      allow read: if true; // Lecture publique
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() 
        && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Sous-collection des vérifications
      match /verifications/{verificationId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isAuthenticated() 
          && (resource.data.userId == request.auth.uid || isAdmin());
      }
    }

    // ✅ CollectionGroup pour les vérifications : lecture pour tous les authentifiés, écriture réservée aux admins
    match /{path=**}/verifications/{verificationId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Collection des notifications
    match /notifications/{notificationId} {
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
    }

    // Collection des publicités
    match /ads/{adId} {
      allow read: if true; // Lecture publique
      allow create, update, delete: if isAdmin();
      
      // Permettre à tous d'incrémenter les clics (même non authentifiés)
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['clicks']) &&
        request.resource.data.clicks >= resource.data.clicks;
      
      // Permettre aux utilisateurs authentifiés d'incrémenter impressions
      allow update: if isAuthenticated() && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['impressions']) &&
        request.resource.data.impressions >= resource.data.impressions;
    }

    // Collection des abonnements
    match /subscriptions/{subscriptionId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Paramètres de l'application
    match /settings/{settingId} {
      allow read: if true; // Lecture publique
      allow write: if isAdmin();
    }

    // Demandes de contact
    match /contact_requests/{requestId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if isAdmin();
    }

    // Logs d'emails
    match /emailLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }

    // Logs de notifications
    match /notificationLogs/{logId} {
      allow read: if isAdmin();
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }

    // Matches
    match /matches/{matchId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    // ❌ Par défaut : bloquer tout accès non explicitement autorisé
      match /{document=**} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
      }
  }
}